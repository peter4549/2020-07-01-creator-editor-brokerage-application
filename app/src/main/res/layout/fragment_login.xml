<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fragment_container_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:focusable="true"
    tools:context=".fragments.LoginFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_login_with_google"
            style="@style/LoginButtonTheme"
            android:text="@string/start_with_google" />

        <Button
            android:id="@+id/button_login_with_facebook"
            style="@style/LoginButtonTheme"
            android:layout_marginTop="4dp"
            android:text="@string/start_with_facebook" />

        <Button
            android:id="@+id/button_login_with_email"
            android:layout_marginTop="4dp"
            style="@style/LoginButtonTheme"
            android:text="@string/start_with_email" />

        <Button
            android:id="@+id/button_sign_up_with_email"
            android:layout_marginTop="32dp"
            style="@style/LoginButtonTheme"
            android:text="@string/sign_up_with_email" />

    </LinearLayout>

</FrameLayout>