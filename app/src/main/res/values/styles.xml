<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/TextViewFontStyle</item>
        <item name="android:buttonStyle">@style/ButtonFontStyle</item>
        <item name="android:editTextStyle">@style/EditTextFontStyle</item>

        <item name="android:dropDownListViewStyle">@style/SpinnerTheme</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LoginButtonTheme">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AddImageViewTheme">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:divider">@color/colorSpinnerDivider</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="CheckBoxTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingEnd">@dimen/padding_middle_large</item>
        <item name="android:paddingStart">@dimen/padding_middle_large</item>
    </style>

    <!-- Font style -->
    <style name="TextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanum_gothic_font_family</item>
    </style>

    <style name="ButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/nanum_gothic_font_family</item>
    </style>

    <style name="EditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/nanum_gothic_font_family</item>
    </style>

</resources>
